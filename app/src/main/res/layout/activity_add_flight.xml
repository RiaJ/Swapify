<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="swapify.com.swapify.AddFlightActivity">

    <LinearLayout
        android:id="@+id/flight_no_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/flight_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/flight_no"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/edit_flight_no"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:hint="@string/flight_no_ex" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/plane_type_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/flight_no_layout"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/plane_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/plane_type"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/edit_plane_type"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:hint="@string/plane_type_ex" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/seat_no_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/plane_type_layout"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/seat_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/seat_no"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/edit_seat_no"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:hint="@string/seat_no_ex" />

    </LinearLayout>

    <Button android:id="@+id/save_flight_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/seat_no_layout"
        android:layout_centerHorizontal="true"
        android:text="@string/save_flight_info" />

</RelativeLayout>
